<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialogue"
    android:maxHeight="250dp"
    android:minHeight="250dp"
    android:minWidth="300dp"
    tools:context=".FullscreenActivity" >

    <ImageButton
        android:id="@+id/startEasy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        android:src="@drawable/easybuttonstyle" />
     <ImageButton
        android:id="@+id/startHard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startEasy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/hardbuttonstyle" />

    <ImageButton
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/startHard"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/cancelbuttonstyle" />

    <ImageButton
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/resetButton"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/resetbuttonstyle" />

</RelativeLayout>